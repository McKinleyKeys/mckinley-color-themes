{
    "name": "mckinley-color-themes",
    "displayName": "McKinley's Color Themes",
    "description": "McKinley's Color Themes",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Themes"
    ],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"activationEvents": [
		"onCommand:mckinley-color-themes.activate-obsidian",
		"onCommand:mckinley-color-themes.activate-watermelon"
	],
	"main": "./main.js",
    "contributes": {
        "themes": [
            {
                "label": "Obsidian",
                "uiTheme": "vs",
                "path": "./themes/obsidian.json"
            },
			{
				"label": "Sublime",
				"uiTheme": "vs-dark",
				"path": "./themes/sublime.json"
			},
			{
				"label": "Watermelon",
				"uiTheme": "vs-dark",
				"path": "./themes/watermelon.json"
			}
        ],
		"iconThemes": [
            {
				"label": "Obsidian Icons",
				"id": "obsidian-icons",
				"path": "./icon-themes/obsidian-icon-theme.json"
			},
			{
				"label": "Watermelon Icons",
				"id": "watermelon-icons",
				"path": "./icon-themes/watermelon-icon-theme.json"
			}
		],
		"commands": [
			{
				"command": "mckinley-color-themes.activate-obsidian",
				"title": "Activate Obsidian"
			},
			{
				"command": "mckinley-color-themes.activate-watermelon",
				"title": "Activate Watermelon"
			}
		]
    }
}
